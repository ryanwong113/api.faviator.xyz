{
  "name": "api.faviator.xyz",
  "version": "0.1.0",
  "description": "The API that serves faviator.xyz.",
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test": "npm run test:js",
    "preversion": "git checkout master && git merge --squash dev && npm test",
    "version": "git add -A",
    "postversion": "git push && git push --tags && git checkout - && git merge master -m 'Merge with master' && git push",
    "\n# DEPLOYMENT SCRIPTS:": "",
    "predeploy": "git checkout master",
    "deploy": "git push prod master",
    "postdeploy": "git checkout - && git push",
    "\n# TESTING SCRIPTS:": "",
    "test:js": "jest",
    "test:js:w": "npm run test:js -- --watch",
    "coverage": "codecov",
    "lint:js": "eslint .",
    "start:mongo-express": "($(cat .env | xargs -n1 echo export) && VCAP_APP_PORT=8082 mongo-express -U $MONGO_URL)",
    "start:mongo-express:test": "($(cat .env | xargs -n1 echo export) && VCAP_APP_PORT=8082 mongo-express -U $MONGO_TEST_URL)",
    "mongo:test": "mongo $MONGO_TEST_URL",
    "\n# HUSKY GIT HOOKS:": "",
    "precommit": "lint-staged"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/faviator/api.faviator.xyz.git"
  },
  "author": "Jason Yu <me@ycmjason.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/faviator/api.faviator.xyz/issues"
  },
  "homepage": "https://github.com/faviator/api.faviator.xyz#readme",
  "engines": {
    "node": ">=8",
    "npm": ">=5.6"
  },
  "dependencies": {
    "body-parser": "^1.18.2",
    "connect-mongo": "^2.0.1",
    "cors": "^2.8.4",
    "express": "^4.16.2",
    "express-session": "^1.15.6",
    "faviator": "^0.2.0",
    "isemail": "^3.1.1",
    "mongoose": "^5.0.6",
    "morgan": "^1.9.0",
    "passport": "^0.4.0",
    "passport-facebook": "^2.1.1"
  },
  "devDependencies": {
    "@ycm.jason/eslint-config": "^1.1.0",
    "codecov": "^3.0.0",
    "dotenv": "^5.0.0",
    "eslint": "^4.17.0",
    "husky": "^0.14.3",
    "jest": "^22.3.0",
    "lint-staged": "^6.1.0",
    "lodash.pick": "^4.4.0",
    "mongo-express": "^0.44.0",
    "mongodb-memory-server": "^1.7.0"
  }
}
